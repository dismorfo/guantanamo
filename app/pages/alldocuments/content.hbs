<div id="content">
  <div id="content-inner">
    {{#content}}
      {{#main}}        
        <h1 class="title">{{title}}</h1>
        <div id="app" class="clearfix">
          <a name="main-content" id="main-content"></a>      
          <br />
          <b-col>
            <b-form-group
              label="Filter"
              label-cols-sm="3"
              label-align-sm="left"
              label-size="sm"
              label-for="filterInput"
              class="mb-0"
              primary
            >
              <b-input-group size="sm">
                <b-form-input
                  v-model="filter"
                  type="search"
                  id="filterInput"
                  placeholder="Type to Search Articles"
                 ></b-form-input>
                 <b-input-group-append>
                   <b-button :disabled="!filter" @click="filter = ''">Clear</b-button>
                  </b-input-group-append>
                </b-input-group>
              </b-form-group>
            </b-col>          
            <br />
            <b-table 
              striped 
              hover 
              sort-icon-left 
              :filter="filter"
              responsive="sm" 
              :items="items" 
              :fields="fields" 
              :sort-by.sync="sortBy" 
              :busy.sync="isBusy"
              :current-page="currentPage"
              :per-page="perPage"
            >
            <template v-slot:cell(title)="data">
              <a :href="`/node/${data.item.nid}`" v-html="data.item.title"></a>
            </template>
            <template v-slot:cell(pdfa)="data">
              <a :href="data.item.pdfa">Download PDF Article</a>
            </template>
          </b-table>
          <b-pagination
            align="center"
            v-model="currentPage"
            :total-rows="totalRows"
            :per-page="perPage"
            align="fill"
            size="sm"
            class="my-0"
            aria-controls="items"
            ></b-pagination>
            <br/>
        </div>
      {{/main}}
    {{/content}}
  </div>
</div>
